@model IEnumerable<OnlineBanking.Models.Transaction>

@{
    ViewData["Title"] = "Cheques";
    var _context = ViewBag.Context as OnlineBankingContext;
    int count = 0;
}

<!-- Content
  ============================================= -->
<div id="content" class="py-4">
    <div class="container">
        <div class="row">

            <partial name="_AsideLeft" />

            <!-- Middle Panel
            ============================================= -->
            <div class="col-lg-9">

                <h2 class="font-weight-400 mb-3">Cheques</h2>

                <!-- Filter
                ============================================= -->
                <div class="row">
                    <div class="col mb-2">
                        <form id="filterTransactions" asp-controller="Cheques" asp-action="Index" method="post">
                            <div class="form-row">
                                <!-- Date Range
                                ========================= -->
                                <div class="col-sm-6 col-md-5 form-group">
                                    <label>Begin</label>
                                    <input class="form-control" type="date" name="BeginDay" value="@DateTime.MinValue" />
                                    <label>End</label>
                                    <input class="form-control" type="date" name="EndDay" value="@DateTime.Now" /><br />
                                </div>
                                <!-- Statements Link
                                ========================= -->
                                <div class="col-auto d-flex align-items-center ml-auto form-group">
                                    <div class="dropdown">
                                        <a class="text-muted btn-link" href="#" role="button" id="statements" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fas fa-file-download text-3 mr-1"></i>Statements</a>
                                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="statements"> <a class="dropdown-item" href="#">CSV</a> <a class="dropdown-item" href="#">PDF</a> </div>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn-group-toggle">Statistics</button>
                        </form>
                    </div>
                </div>
                <!-- Filter End -->
                <!-- All Transactions
                ============================================= -->
                @if (ViewBag.AllChequeByUser != null)
                {
                    <div class="bg-light shadow-sm rounded py-4 mb-4">
                        <h3 class="text-5 font-weight-400 d-flex align-items-center px-4 mb-3">All Your Cheques</h3>
                        <!-- Title
                        =============================== -->
                        <div class="transaction-title py-2 px-4">
                            <div class="row">
                                <div class="col-2 col-sm-1 text-center"><span class="">Date</span></div>
                                <div class="col col-sm-7">Status</div>
                                <div class="col-auto col-sm-2 d-none d-sm-block text-center">Amount</div>
                                @*<div class="col-3 col-sm-2 text-right">New Balance</div>*@
                            </div>
                        </div>
                        <!-- Title End -->
                        <!-- Transaction List
                        =============================== -->
                        <div class="transaction-list">
                            <!--Vòng lặp ở đây-->
                            @foreach (Cheque cheque in ViewBag.AllChequeByUser)
                            {
                                //Dùng 1 biến đếm để thêm vào id cho Cheque
                                count++;
                                <div class="transaction-item px-4 py-3" data-toggle="modal" data-target="#transaction-detail-@count">
                                    <div class="row align-items-center flex-row">
                                        <div class="col-2 col-sm-1 text-center"> <span class="d-block text-4 font-weight-100"><!--Chỗ này để ngày-->@cheque.DateCreate.ToString("MMMM dd")</span>  </div>

                                        @{
                                            if (cheque.ProccessingStatus)
                                            {
                                                <div class="col col-sm-7"> <span class="d-block text-4">Approved</div>
                                            }
                                            else
                                            {
                                                <div class="col col-sm-7"> <span class="d-block text-4">Checking</div>
                                            }
                                            <div class="col-3 col-sm-2 text-right text-4"> <span class="text-nowrap">- @cheque.Amount</span> <span class="text-2 text-uppercase">@cheque.currency.Name</span> </div>
                                            @*<div class="col-3 col-sm-2 text-right text-4"> <span class="text-nowrap">$@cheque.NewBalanceSender$</div>*@
                                        }
                                    </div>
                                </div>
                            }
                            <!--Kết thúc vòng lặp-->
                            <!--Sửa lại biến count-->
                            @{
                                count = 0;
                            }

                        </div>
                        <!-- Transaction List End -->
                        <!-- Transaction Item Details Modal
                        =========================================== -->
                        <!--Vòng lặp ở đây-->
                        @foreach (Cheque cheque in ViewBag.AllChequeByUser)
                        {
                            count++;
                            <div id="transaction-detail-@count" class="modal fade" role="dialog" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered transaction-details" role="document">
                                    <div class="modal-content">
                                        <div class="modal-body">
                                            <div class="row no-gutters">
                                                <!-- Cái màu xanh bên trái-->
                                                <div class="col-sm-5 d-flex justify-content-center bg-primary rounded-left py-4">
                                                    <div class="my-auto text-center">
                                                        <div class="text-17 text-white my-3"><i class="fas fa-building"></i></div>
                                                        <h3 class="text-4 text-white font-weight-400 my-3">Your Request Cheque</h3>
                                                        <div class="text-8 font-weight-500 text-white my-4">@cheque.Amount @cheque.currency.Name</div>
                                                        <p class="text-white"><!--Ngày tháng ở đây-->@cheque.DateCreate.ToString("dddd, dd MMMM yyyy")</p>
                                                    </div>
                                                </div>
                                                <div class="col-sm-7">
                                                    <h5 class="text-5 font-weight-400 m-3">
                                                        Cheque Details
                                                        <button type="button" class="close font-weight-400" data-dismiss="modal" aria-label="Close"> <span aria-hidden="true">&times;</span> </button>
                                                    </h5>
                                                    <hr>

                                                    <div class="px-3">
                                                        <p class="d-flex align-items-center font-weight-500 mb-4">Total Amount <span class="text-3 ml-auto">- @cheque.Amount @cheque.currency.Name</span></p>

                                                        <ul class="list-unstyled">
                                                            <li class="font-weight-500 mb-3">
                                                                You Have Send To Address:
                                                                @if (!cheque.ProccessingStatus)
                                                                {
                                                                    <a href="#edit-Address-@cheque.Id" data-toggle="modal" class="float-right text-1 text-uppercase text-muted btn-link"><i class="fas fa-edit mr-1"></i>Edit Address</a>
                                                                }
                                                            </li>
                                                            <li class="text-muted">@cheque.Address</li>
                                                        </ul>
                                                        <ul class="list-unstyled">
                                                            <li class="font-weight-500">From Account</li>
                                                            <li class="text-muted">@cheque.Accounts.Number</li>
                                                        </ul>
                                                        <ul class="list-unstyled">
                                                            <li class="font-weight-500">Status:</li>
                                                            @if (cheque.ProccessingStatus)
                                                            {
                                                                <li class="text-muted">Delivering</li>
                                                            }
                                                            else
                                                            {
                                                                <li class="text-muted">Checking</li>
                                                            }

                                                        </ul>
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        @{
                            count = 0;
                        }



                        <!--Tạo thêm một cái model nhỏ để sửa địa chỉ-->
                        @foreach (Cheque cheque in ViewBag.AllChequeByUser)
                        {
                            count++;
                            <div id="edit-Address-@cheque.Id" class="modal fade " role="dialog" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title font-weight-400">Edit Addresses</h5>
                                            <button type="button" class="close font-weight-400" data-dismiss="modal" aria-label="Close"> <span aria-hidden="true">&times;</span> </button>
                                        </div>
                                        <div class="modal-body p-4">
                                            <form id="emailAddresses" asp-controller="Cheques" asp-action="UpdateAddress" method="post">
                                                <div class="row">
                                                    <div class="col-12">
                                                        <div class="form-group">
                                                            <label for="emailID">New Address</label>
                                                            <input type="hidden" name="ChequeId" value="@cheque.Id" />
                                                            <input type="text" class="form-control" name="NewAddress" required placeholder="Your Current Address: @cheque.Address">
                                                        </div>
                                                    </div>
                                                </div>
                                                <button class="btn btn-primary btn-block" type="submit">Update</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }


                        <!--Kết thúc vòng lặp-->
                        <!-- Transaction Item Details Modal End -->
                        <!-- Pagination
                        ============================================= -->
                        @*<ul class="pagination justify-content-center mt-4 mb-0">
                                <li class="page-item disabled"> <a class="page-link" href="#" tabindex="-1"><i class="fas fa-angle-left"></i></a> </li>
                                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                <li class="page-item"><a class="page-link" href="#">2 <span class="sr-only">(current)</span></a> </li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item d-flex align-content-center flex-wrap text-muted text-5 mx-1">......</li>
                                <li class="page-item"><a class="page-link" href="#">15</a></li>
                                <li class="page-item"> <a class="page-link" href="#"><i class="fas fa-angle-right"></i></a> </li>
                            </ul>*@
                        <!-- Paginations end -->

                    </div>
                }
                <!-- All Transactions End -->
            </div>
            <!-- Middle End -->
        </div>
    </div>
</div>
<!-- Content end -->
